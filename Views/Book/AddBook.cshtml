@model Bookish.ViewModels.BookViewModel;
@{
    ViewData["Title"] = "AddBook";
}
<div>
    <form asp-action="AddBook">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" size="50"/>
             <label asp-for="AuthorName"></label>
            <input asp-for="AuthorName" size="50"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Add Book" class="btn btn-primary addSubmit" />
        </div>
    </form>    
</div>
<p>
    <a asp-action="ViewBook">Go back to Book Management</a>
</p> 